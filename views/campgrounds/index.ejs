<% include ../partials/header %>



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>Explore the hand-picked camping sites from all across the world</p>
            <p>
                <a class='btn btn-primary btn-large' href="/campgrounds/new">Add a New CampGround!!</a>
            </p>
        </div>
    </header>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img src="<%=campground.image %>" class="img-thumbnail" style="height: 10rem">
                    <div class="caption">
                        <h6><%=campground.name%></h6>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info..</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>